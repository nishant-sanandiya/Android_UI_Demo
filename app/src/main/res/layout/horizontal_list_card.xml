<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/horizontalListCardID"
    android:elevation="5dp"
    android:background="@drawable/horizontal_card"
    android:layout_marginHorizontal="@dimen/margin_10"
    app:layout_constraintCircleRadius="@dimen/radius_15"
    android:layout_width="150dp"
    android:layout_height="280dp">

    <ImageView
        android:id="@+id/cardImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/titleText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:srcCompat="@drawable/man" />

    <TextView
        android:id="@+id/titleText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:lines="1"
        app:layout_constraintBottom_toTopOf="@+id/subTitleText"
        app:layout_constraintEnd_toEndOf="@+id/cardImage"
        app:layout_constraintStart_toStartOf="@+id/cardImage"
        app:layout_constraintTop_toBottomOf="@+id/cardImage" />

    <TextView
        android:id="@+id/subTitleText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:lines="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/cardImage"
        app:layout_constraintStart_toStartOf="@+id/cardImage"
        app:layout_constraintTop_toBottomOf="@+id/titleText" />

    <TextView
        android:id="@+id/taskText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:lines="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/cardImage"
        app:layout_constraintStart_toStartOf="@+id/cardImage"
        app:layout_constraintTop_toBottomOf="@+id/subTitleText" />

</androidx.constraintlayout.widget.ConstraintLayout>